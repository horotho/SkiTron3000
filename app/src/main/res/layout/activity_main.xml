<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.will.skitron.MainActivity">

    <TextView
        android:text="@string/trent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp"
        android:id="@+id/trentView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Location:"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1"
        android:id="@+id/button_red"
        android:layout_below="@+id/locView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:background="#ff0111"
        android:onClick="red"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button2"
        android:id="@+id/button_green"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1aff28"
        android:onClick="green"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 2"
        android:id="@+id/button_blue"
        android:layout_alignTop="@+id/button_red"
        android:layout_alignRight="@+id/locView"
        android:layout_alignEnd="@+id/locView"
        android:background="#0018ff"
        android:onClick="blue"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button3"
        android:id="@+id/button_teal"
        android:layout_alignTop="@+id/button_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#3adeff"
        android:singleLine="true"
        android:onClick="teal"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHITS: "
        android:id="@+id/textView"
        android:layout_above="@+id/button_blue"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connectBtn"
        android:layout_alignTop="@+id/trentView"
        android:layout_alignRight="@+id/trentView"
        android:layout_alignEnd="@+id/trentView"
        android:onClick="connect"/>

</RelativeLayout>
